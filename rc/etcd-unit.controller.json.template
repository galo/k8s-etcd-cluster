{
  "apiVersion": "v1",
  "kind": "ReplicationController",
  "metadata": {
    "name": "etcd-unit-controller"
  },
  "spec": {
    "replicas": 3,
    "selector": {
      "name": "etcd",
      "role": "unit",
      "release": "stable",
      "environment": "staging",
      "tiers": "middleware",
      "version": "2.1.1"
    },
    "template": {
      "metadata": {
        "labels": {
          "name": "etcd",
          "role": "unit",
          "release": "stable",
          "environment": "staging",
          "tiers": "middleware",
          "version": "2.1.1"
        }
      },
      "spec": {
        "volumes": null,
        "containers": [
          {
            "name": "etcd",
            "image": "us.gcr.io/PROJECT_ID/etcd:2.1.1",
            "env": [ 
              { "name": "X_ETCD_DISCOVERY", 
                "value": "http://etcd-service.default.svc.cluster.local:2379"
              }
            ],
            "ports": [
              {
                "name": "client",
                "containerPort": 2379,
                "protocol": "TCP"
              },
              {
                "name": "peer",
                "containerPort": 2380,
                "protocol": "TCP"
              }
            ],
            "lifecycle": { 
              "preStop": {
                "exec": {
                  "command": [ "/opt/k8s-hooks/prestop.sh" ]
                }
              }
            }
          }
        ]
      }
    }
  }
}
